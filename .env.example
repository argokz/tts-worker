# API
API_PREFIX=/api/v1
CORS_ALLOW_ORIGINS=*

# LLM backend: ollama | openai_compat | openai | gemini
LLM_BACKEND=ollama
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=qwen2.5:7b-instruct

OPENAI_COMPAT_BASE_URL=http://localhost:8001/v1
OPENAI_COMPAT_MODEL=Qwen/Qwen2.5-7B-Instruct
OPENAI_COMPAT_API_KEY=local

OPENAI_API_KEY=
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4o-mini

GEMINI_API_KEY=
GEMINI_BASE_URL=https://generativelanguage.googleapis.com/v1beta
GEMINI_MODEL=gemini-2.0-flash

SYSTEM_PROMPT=Ты голосовой AI-ассистент. Отвечай кратко, полезно и дружелюбно.

# STT
WHISPER_MODEL_SIZE=small
WHISPER_COMPUTE_TYPE=int8

# TTS/voice clone
TTS_MODEL_NAME=tts_models/multilingual/multi-dataset/xtts_v2
TTS_USE_GPU=false
